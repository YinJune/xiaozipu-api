<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaozipu.dao.mapper.custom.ProductDao">

    <resultMap id="orderListDO" type="com.xiaozipu.dao.entity.custom.OrderListDO">
        <id column="id" property="orderId"/>
        <result column="order_code" property="orderCode"/>
        <result column="name" property="productName"/>
        <result column="order_amount" property="orderAmount"/>
        <result column="status" property="orderStatus"/>
        <result column="create_time" property="createTime"/>
        <collection property="products" ofType="com.xiaozipu.dao.entity.custom.CartProductDO">
            <id column="productSpecId" property="productSpecId"/>
            <result column="image_url" property="productImageUrl"/>
        </collection>
    </resultMap>

    <select id="getOrderList" resultMap="orderListDO">

    </select>
</mapper>